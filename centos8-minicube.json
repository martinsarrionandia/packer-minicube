{
  "variables": {
    "version": "2004",
    "url": "http://mirrors.ukfast.co.uk/sites/ftp.centos.org/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-minimal.iso",
    "checksum": "47ab14778c823acae2ee6d365d76a9aed3f95bb8d0add23a06536b58bb5293c0",
    "shutdown_command": "sudo shutdown -h now",
    "headless": "true",
    "hostname": "minikube",
    "display_name": "minikube",
    "driver": "none",
    "admin_user": "kubeadmin",
    "admin_pass": "{{ aws_secretsmanager `host/minikube/users` `kubeadmin` }}",
    "root_pass": "{{ aws_secretsmanager `host/minikube/users` `root` }}", 
    "cpus": "4",
    "memory": "8192",
    "deploy_host": "sexiboy.mgmt",
    "deploy_datastore": "VM",
    "deploy_network": "Firewall Backend",
    "ip_address": "192.168.9.10/24",
    "gateway": "192.168.9.1",
    "dns_server": "192.168.8.2"

  },
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "environment_vars": [
        "NEWHOSTNAME={{user `hostname`}}",
	"DRIVER={{user `driver`}}",
	"ADMIN_USER={{user `admin_user`}}",
	"ADMIN_PASS={{user `admin_pass`}}",
	"ROOT_PASS={{user `root_pass`}}",
	"CPUS={{user `cpus`}}",
	"MEMORY={{user `memory`}}",
	"IP_ADDRESS={{user `ip_address`}}",
	"GATEWAY={{user `gateway`}}",
	"DNS_SERVER={{user `dns_server`}}"
      ],
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
	"scripts/hostname.sh",
        "scripts/appstream.sh", 
	"scripts/update.sh",
        "scripts/vmtools.sh",
        "scripts/minikube.sh",
	"scripts/disable_eth_naming.sh",
	"scripts/network.sh",
	"scripts/users.sh"
      ]
    }
  ],
    "post-processors": [
    {
      "type": "shell-local",
      "environment_vars": [
        "NEWHOSTNAME={{user `hostname`}}",
        "CPUS={{user `cpus`}}",
        "MEMORY={{user `memory`}}"
      ],
      "execute_command": ["bash", "-c", "{{.Vars}} {{.Script}}"],
      "scripts": ["scripts/make_ova.sh"]
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "version": "15",
      "cpus": "{{user `cpus`}}",
      "memory": "{{user `memory`}}",
      "iso_url": "{{user `url`}}",
      "iso_checksum": "{{user `checksum`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "20m",
      "network_adapter_type": "vmxnet3",
      "disk_adapter_type": "pvscsi",
      "disk_size": "10000",
      "tools_upload_flavor": "linux",
      "guest_os_type": "centos8-64",
      "headless": "{{user `headless`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "http_directory": "http",
      "display_name": "{{user `display_name`}}",
      "vmx_remove_ethernet_interfaces": "false",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ]
}
